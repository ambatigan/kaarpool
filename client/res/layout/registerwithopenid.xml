<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget70"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/widget115"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="20px"
android:layout_marginBottom="10px"
android:layout_marginLeft="10px"
android:layout_marginRight="10px"
android:text="Open Id Registration"
android:textSize="18sp"
android:textStyle="bold"
android:textColor="#ff00cc99"
android:layout_gravity="center_horizontal"
>
</TextView>
<TableLayout
android:id="@+id/widget137"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="30px"
android:orientation="vertical"
android:layout_gravity="center_horizontal"
>
<TableRow
android:id="@+id/widget138"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/username"
android:layout_width="wrap_content"
android:layout_height="wrap_content"

android:text="User Id:"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
>
</TextView>
<EditText
android:id="@+id/useridtxt"
android:layout_width="100px"
android:layout_height="40px"
android:textSize="16sp"
>
</EditText>
</TableRow>

<TableRow
android:id="@+id/widget141"
android:layout_width="159px"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget142"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="                  "
>
</TextView>
<TextView
android:id="@+id/widget143"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="abc@example.com"
>
</TextView>
</TableRow>
<TableRow
android:id="@+id/widget138"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/pwd"
android:layout_width="wrap_content"
android:layout_height="wrap_content"

android:text="Password:"
android:textStyle="bold"
android:layout_gravity="center_horizontal"
>
</TextView>
<EditText
android:id="@+id/pwdtxt"
android:layout_width="100px"
android:layout_height="40px"
android:textSize="16sp"
android:password="true"
>
</EditText>
</TableRow>
<TableRow
android:id="@+id/widget1"
android:layout_width="159px"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="                  "
>
</TextView>
<TextView
android:id="@+id/warn"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="                  "
>
</TextView>
</TableRow>
<TableRow
android:id="@+id/widget169"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="20px"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<TextView
android:id="@+id/widget142"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="                  "
